<% title "Casts" %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Resource</th>
  </tr>
  <% for cast in @casts %>
    <tr>
      <td><%=h cast.name %></td>
      <td><%=h cast.description %></td>
      <td><%=h cast.resource %></td>
      <td><%= link_to "Show", cast %></td>
      <td><%= link_to "Edit", edit_cast_path(cast) %></td>
      <td><%= link_to "Destroy", cast, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Cast", new_cast_path %></p>
